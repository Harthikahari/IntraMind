# ============================================
# IntraMind Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Application Settings
# ============================================
APP_NAME=IntraMind
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
TIMEZONE=UTC

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# ============================================
# Database Configuration
# ============================================
# PostgreSQL
DATABASE_URL=postgresql://username:****@localhost:5432/intramind
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Alternative: SQLite (for development)
# DATABASE_URL=sqlite:///./intramind.db

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=****
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ============================================
# AI Model Configuration (OpenAI)
# ============================================
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-****
OPENAI_ORG_ID=****
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_API_BASE=https://api.openai.com/v1

# Azure OpenAI Configuration (Optional Alternative)
# AZURE_OPENAI_API_KEY=****
# AZURE_OPENAI_ENDPOINT=https://****.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=****
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ============================================
# Security & Authentication
# ============================================
SECRET_KEY=****  # Generate with: openssl rand -hex 32
JWT_SECRET=****  # Generate with: openssl rand -hex 32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=****  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# API Keys
API_KEY=****
API_KEY_HEADER=X-API-Key

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=****
SMTP_PASSWORD=****
SMTP_FROM_EMAIL=noreply@intramind.ai
SMTP_FROM_NAME=IntraMind

# ============================================
# Monitoring & Analytics
# ============================================
# Sentry
SENTRY_DSN=****
SENTRY_ENVIRONMENT=development

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================
# Message Queue (Celery)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# File Storage
# ============================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# S3 Configuration (Optional)
S3_BUCKET=****
S3_REGION=us-east-1
S3_ACCESS_KEY=****
S3_SECRET_KEY=****

# ============================================
# External Services
# ============================================
# Webhook URLs
WEBHOOK_URL=****
WEBHOOK_SECRET=****

# Third-party APIs
EXTERNAL_API_KEY=****
EXTERNAL_API_URL=****

# ============================================
# Feature Flags
# ============================================
ENABLE_WEBSOCKETS=true
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_MONITORING=true

# ============================================
# Development Settings
# ============================================
MOCK_AI_RESPONSES=false
SKIP_DB_MIGRATIONS=false
SEED_DATABASE=false

# ============================================
# Logging Configuration
# ============================================
LOG_FORMAT=json  # Options: json, text
LOG_FILE=logs/intramind.log
LOG_ROTATION=1 week
LOG_RETENTION=30 days
